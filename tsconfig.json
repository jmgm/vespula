{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "removeComments": false,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2017"],
        "importHelpers": true,
        "outDir": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
