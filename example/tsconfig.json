{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2018"],
        "jsx": "react",
        "allowJs": true,
        "importHelpers": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "./build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
